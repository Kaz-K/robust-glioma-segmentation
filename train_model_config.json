{
  "run": {
    "use_cuda": true,
    "n_epochs": 500,
    "visible_devices": "0"
  },
  "train_dataset": {
    "dataset_name": "MICCAIBrats2019Dataset",
    "root_dir_path": "./data/MICCAI_BraTS_2019_Data_Training",
    "batch_size": 1,
    "num_workers": 0,
    "volume_size": [32, 32, 32]
  },
  "val_dataset": {
    "dataset_name": "MICCAIBrats2019Dataset",
    "root_dir_path": "./data/MICCAI_BraTS_2019_Data_Training",
    "batch_size": 1,
    "num_workers": 0,
    "volume_size": [32, 32, 32]
  },
  "model": {
    "input_dim": 4,
    "output_dim": 3,
    "filters": [32, 64, 128, 256],
    "saved_model": false,
    "init_type": "kaiming"
  },
  "optimizer": {
    "lr": 1e-4,
    "betas": [0.9, 0.999],
    "weight_decay": 1e-5,
    "gamma": 0.9
  },
  "focal_loss": {
    "gamma": 2,
    "alpha": false
  },
  "active_contour_loss": {
    "weight": 1
  },
  "metric": {
    "n_classes": 3
  },
  "save": {
    "study_name": "baseline",
    "save_epoch_interval": 1,
    "output_root_dir": "./result",
    "n_save_images": 8,
    "n_classes": 3,
    "vmin": false,
    "vmax": false
  },
  "label_to_id": {
    "NET": 0,
    "ED": 1,
    "ET": 2
  }
}
